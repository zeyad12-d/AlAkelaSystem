<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام نقاط البيع</title>

    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts Arabic -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            font-family: 'Cairo', sans-serif;
        }

        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 12px 20px;
            margin: 5px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255,255,255,0.2);
            color: white;
            transform: translateX(-5px);
        }

        .main-content {
            background-color: #ffffff;
            min-height: 100vh;
            border-radius: 15px 0 0 15px;
            box-shadow: -2px 0 10px rgba(0,0,0,0.05);
        }

        .top-navbar {
            background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            padding: 15px 0;
            border-radius: 15px 0 0 0;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .product-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.05);
        }

        .cart-item {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 10px;
            margin-bottom: 10px;
            border-left: 4px solid #667eea;
        }

        .loading {
            display: none;
        }

        .loading.show {
            display: block;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar p-0">
                <div class="text-center py-4">
                    <h4 class="text-white">
                        <i class="fas fa-cash-register"></i>
                        نظام الكاشير
                    </h4>
                </div>

                <ul class="nav flex-column px-3">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-2"></i>
                            الصفحة الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")"
                           href="@Url.Action("Orders", "Home")">
                            <i class="fas fa-shopping-cart me-2"></i>
                            إدارة الطلبات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           href="@Url.Action("Index", "Product")">
                            <i class="fas fa-box me-2"></i>
                            إدارة المنتجات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString() == "Category" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index") ? "active" : "")"
                           href="@Url.Action("Index", "Category")">
                            <i class="fas fa-tags me-2"></i>
                            إدارة الفئات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Customers" ? "active" : "")"
                           href="@Url.Action("Customers", "Home")">
                            <i class="fas fa-users me-2"></i>
                            إدارة العملاء
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Coupons" ? "active" : "")"
                           href="@Url.Action("Coupons", "Home")">
                            <i class="fas fa-ticket-alt me-2"></i>
                            إدارة الكوبونات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString() == "Discount"
                          && ViewContext.RouteData.Values["Action"]?.ToString() == "Index") ? "active" : "")"
                           href="@Url.Action("Index", "Discount")">
                            <i class="fas fa-percent me-2"></i>
                            إدارة الخصومات
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString() == "Extras" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index") ? "active" : "")"
                           href="@Url.Action("Index", "Extras")">
                            <i class="fas fa-plus-circle me-2"></i>
                            إدارة الإضافات
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 main-content p-0">
                <!-- Top Navbar -->
                <div class="top-navbar">
                    <div class="container-fluid px-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="mb-0">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    @DateTime.Now.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("ar-SA"))
                                </h5>
                            </div>
                            <div class="col-md-4 text-end">
                                <span class="me-3">
                                    <i class="fas fa-user-circle me-1"></i>
                                    أهلاً بك، الكاشير
                                </span>
                                <button class="btn btn-outline-light btn-sm">
                                    <i class="fas fa-sign-out-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page Content -->
                <div class="container-fluid p-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div class="loading position-fixed top-50 start-50 translate-middle" style="z-index: 9999;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">جارٍ التحميل...</span>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // دالة عامة لإظهار الرسائل
        function showAlert(type, title, message) {
            Swal.fire({
                icon: type,
                title: title,
                text: message,
                confirmButtonText: 'حسناً',
                confirmButtonColor: '#667eea'
            });
        }

        // دالة لإظهار Loading
        function showLoading() {
            $('.loading').addClass('show');
        }

        // دالة لإخفاء Loading
        function hideLoading() {
            $('.loading').removeClass('show');
        }

        // تحديث التوقيت كل دقيقة
        setInterval(function() {
            location.reload();
        }, 60000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
