@model IEnumerable<DTO.ExtrasDtos.ExtrasResponseDto>

@{
    ViewData["Title"] = "الإضافات";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-plus-circle me-2"></i>
            قائمة الإضافات
        </h5>
        <a class="btn btn-sm btn-success" asp-action="Create">
            <i class="fas fa-plus me-1"></i>
            إضافة جديد
        </a>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center text-muted">
                لا توجد إضافات لعرضها.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>الاسم</th>
                            <th>السعر</th>
                            <th class="text-end">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString("F2")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fas fa-eye"></i>
                                            عرض
                                        </a>
                                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-edit"></i>
                                            تعديل
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                                حذف
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


