@model DTO.ExtrasDtos.ExtrasResponseDto

@{
    ViewData["Title"] = "تفاصيل الإضافة";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">تفاصيل الإضافة</h5>
        <div>
            <a class="btn btn-sm btn-secondary" asp-action="Index">رجوع</a>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">تعديل</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">الاسم</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">السعر</dt>
            <dd class="col-sm-9">@Model.Price.ToString("F2")</dd>
        </dl>
    </div>
</div>


