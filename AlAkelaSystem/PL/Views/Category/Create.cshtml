@model DTO.CategoryDtos.CreateCategoryDto

@{
    ViewData["Title"] = "إضافة فئة";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">إضافة فئة</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Icon" class="form-label"></label>
                <textarea asp-for=" Icon" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-secondary me-2" asp-action="Index">إلغاء</a>
                <button type="submit" class="btn btn-primary">حفظ</button>
            </div>
        </form>
    </div>
</div>


