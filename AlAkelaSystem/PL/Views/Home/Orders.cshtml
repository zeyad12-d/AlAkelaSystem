@model IEnumerable<DTO.OrderDtos.OrderResponseDto>
@{
    ViewData["Title"] = "إدارة الطلبات";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-receipt me-2 text-primary"></i>إدارة الطلبات</h4>
                <a class="btn btn-outline-secondary" href="@Url.Action("Index","Home")"><i class="fas fa-home me-1"></i>الرئيسية</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-list me-2"></i>الطلبات</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>التاريخ</th>
                                <th>العميل</th>
                                <th>الحالة</th>
                                <th>الإجمالي</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var o in Model)
                                {
                                    <tr>
                                        <td>@o.Id</td>
                                        <td>@o.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@o.CustomerName</td>
                                        <td>@o.Status</td>
                                        <td>@(o.TotalAmount?.ToString("C", new System.Globalization.CultureInfo("ar-SA")))</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


