@model DTO.ProductDtos.ProductResponseDto
@{
    ViewData["Title"] = "تفاصيل المنتج";
}

<div class="row">
    <div class="col-12 col-lg-10 mx-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-box-open me-2 text-primary"></i>
                    تفاصيل المنتج
                </h5>
                <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index", "Product")">
                    <i class="fas fa-arrow-right me-1"></i> رجوع للقائمة
                </a>
            </div>
            <div class="card-body">
                @if (Model == null)
                {
                    <div class="alert alert-warning mb-0">لا توجد بيانات لعرضها.</div>
                }
                else
                {
                    <dl class="row mb-0">
                        <dt class="col-sm-3">الرقم</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">اسم المنتج</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">الوصف</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">السعر</dt>
                        <dd class="col-sm-9">
                            @Model.Price.ToString("C", new System.Globalization.CultureInfo("ar-SA"))
                        </dd>

                        <dt class="col-sm-3">الكمية</dt>
                        <dd class="col-sm-9">@Model.Stock</dd>
                    </dl>
                }
            </div>
        </div>
    </div>
    
</div>


