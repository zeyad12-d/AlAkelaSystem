@model DTO.ProductDtos.CreateProductDto
@using DTO.CategoryDtos
@{
    ViewData["Title"] = "إضافة منتج";
    var categories = ViewBag.Categories as IEnumerable<CategoryResponseDto>;
}

<div class="row">
    <div class="col-12 col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">إضافة منتج</h5>
                <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index", "Product")">رجوع</a>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label">اسم المنتج *</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الفئة *</label>
                        <select asp-for="CategoryId" class="form-select" required>
                            <option value="">اختر الفئة</option>
                            @if (categories != null)
                            {
                                foreach (var c in categories)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">السعر *</label>
                                <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">المخزون</label>
                                <input asp-for="Stock" type="number" min="0" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الوصف</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">حفظ</button>
                </form>
            </div>
        </div>
    </div>
</div>


